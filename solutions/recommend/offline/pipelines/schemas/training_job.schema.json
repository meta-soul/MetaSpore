{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/training_job.schema.json",
  "title": "Training Job",
  "description": "A training job json schema.",
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "enum": ["TrainingJob"],
      "type": "string"
    },
    "metadata": {
      "$ref": "#/definitions/metadata"
    },
    "spec": {
      "$ref": "#/definitions/spec"
    }
  },
  "required": [
    "apiVersion",
    "kind",
    "metadata",
    "spec"
  ],
  "definitions": {
    "metadata": {
      "description": "Metadata of training job.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "pipeline_nodes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/pipeline_node"
          }
        }
      }
    },
    "pipeline_node": {
      "description": "Metadata of pipeline node.",
      "type": "object",
      "properties": {
        "class": {
          "enum": [
            "InitSparkNode",
            "DataLoaderNode",
            "I2IEstimatorNode",
            "RetrievalEvaluatorNode",
            "MongoDBDumperNode",
            "StopSparkNode"
          ],
          "type": "string"
        },
        "params": {
          "type": "object",
          "properties": {
            "node_conf": {
              "type": "string"
            }
          }
        }
      },
      "required": [
        "class"
      ]
    },
    "spec": {
      "description": "Specification of each node.",
      "additionalProperties": {
        "anyOf": [
          {
            "description": "Configuration of logging.",
            "type": "object",
            "properties": {
              "loglevel": {
                "type": "string"
              }
            },
            "required": [
              "loglevel"
            ]
          },
          {
            "description": "Configuration of init spark node.",
            "type": "object",
            "properties": {
              "session_confs": {
                "type": "object",
                "properties": {
                  "app_name": {
                    "type": "string"
                  },
                  "local": {
                    "type": "boolean"
                  },
                  "worker_count": {
                    "type": "integer",
                    "exclusiveMinimum": 0
                  },
                  "worker_cpu": {
                    "type": "integer",
                    "exclusiveMinimum": 0
                  },
                  "server_count": {
                    "type": "integer",
                    "exclusiveMinimum": 0
                  },
                  "server_cpu": {
                    "type": "integer",
                    "exclusiveMinimum": 0
                  },
                  "batch_size": {
                    "type": "integer",
                    "exclusiveMinimum": 0
                  },
                  "worker_memory": {
                    "type": "string",
                    "pattern": "^[1-9]\\d*G$"
                  },
                  "server_memory": {
                    "type": "string",
                    "pattern": "^[1-9]\\d*G$"
                  },
                  "coordinator_memory": {
                    "type": "string",
                    "pattern": "^[1-9]\\d*G$"
                  }
                },
                "required": [
                  "app_name"
                ]
              },
              "extended_confs": {
                "type": "object",
                "properties": {
                  "spark.network.timeout": {
                    "type": "string",
                    "pattern": "^[1-9]\\d*$"
                  },
                  "spark.ui.showConsoleProgress": {
                    "type": "string",
                    "pattern": "^True$|^False|true$|^false$"
                  },
                  "spark.kubernetes.executor.deleteOnTermination": {
                    "type": "string",
                    "pattern": "^True$|^False|true$|^false$"
                  },
                  "spark.jars.packages": {
                    "type": "string"
                  }
                }
              },
              "pyzip": {
                "properties": {
                  "cwd_path": {
                    "type": "string",
                    "pattern": "^[^\\0]+$"
                  },
                  "zip_file_path": {
                    "type": "string",
                    "pattern": "^[^\\0]+\\.zip$"
                  }
                }
              }
            },
            "required": [
              "session_confs"
            ]
          },
          {
            "description": "Configuration of data loader node.",
            "type": "object",
            "properties": {
              "train_path": {
                "type": "string"
              },
              "test_path": {
                "type": "string"
              },
              "item_path": {
                "type": "string"
              }
            },
            "required": [
              "train_path",
              "test_path"
            ]
          },
          {
            "description": "Configuration of data loader node.",
            "type": "object",
            "properties": {
              "i2i_estimator_class": {
                "type": "object",
                "properties": {
                  "module_name": {
                    "type": "string"
                  },
                  "class_name": {
                    "type": "string"
                  }
                },
                "required": [
                  "module_name",
                  "class_name"
                ]
              },
              "model_out_path": {
                "type": "string"
              },
              "max_recommendation_count": {
                "type": "integer",
                "minimum": 1
              }
            },
            "required": [
              "i2i_estimator_class",
              "model_out_path",
              "max_recommendation_count"
            ]
          },
          {
            "description": "Configuration of mongodb dumper node.",
            "type": "object",
            "properties": {
              "uri": {
                "type": "string",
                "pattern": "^mongodb://.+$"
              },
              "database": {
                "type": "string"
              },
              "collection": {
                "type": "string"
              },
              "write_mode": {
                "enum": [
                  "append",
                  "overwrite"
                ],
                "type": "string"
              },
              "index_fields": {
                "type": "array",
                "items": {
                  "type": "integer",
                  "minimum": 0
                }
              },
              "index_unique": {
                "type": "boolean"
              }
            },
            "required": [
              "uri",
              "database",
              "collection",
              "write_mode"
            ]
          },
          {
            "type": "null"
          }
        ]
      }
    }
  }
}